<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
    <head>
        <title><TMPL_VAR NAME=TITLE></title>
        <link rel="stylesheet" type="text/css" href="/spartan.css" />
    </head>
    <body>
        <div id="logo"></div>
        <ul id="toolbar">
            <TMPL_IF NAME=LOGGED_IN>
                <li><a href="?action=log_out">Log out</a></li>
            <TMPL_ELSE>
                <li><a href="?action=log_in">Log in</a></li>
            </TMPL_IF>
        </ul>
        <div id="content">
            <h1><TMPL_VAR NAME=TITLE></h1>
            <form method="POST">
                <textarea name="articletext" rows="10" cols="50"><TMPL_VAR NAME=CONTENT></textarea>
                <p/>
                <input type="submit" value="Save" />
            </form>
        </div>
    </body>
</html>
